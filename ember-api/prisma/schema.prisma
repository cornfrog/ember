generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id                String   @id @default(cuid())
  name              String   @unique
  type              String   @default("")
  favorited         Boolean  @default(false)
  gitEnabled        Boolean  @default(false)
  githubEnabled     Boolean  @default(false)
  cloudflareEnabled Boolean  @default(false)
  prismaEnabled     Boolean  @default(false)
  database          String   @default("")
  githubRepo        String   @default("")
  cloudflarePage    String   @default("")
  renderLink        String   @default("")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Profile {
  id                String   @id @default(cuid())
  name              String   @default("")
  editor            String   @default("")
  githubProfile     String   @default("")
  cloudflareProfile String   @default("")
  renderProfile     String   @default("")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Database {
  id        String   @id @default(cuid())
  name      String   @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Settings {
  id          String @id @default("settings")
  projectsDir String @default("workspace/ember/ember-projects")
  scriptsDir  String @default("~/workspace/ember/ember-scripts")
}
